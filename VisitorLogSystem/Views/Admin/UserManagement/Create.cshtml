@model VisitorLogSystem.ViewModels.Admin.CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">➕ Create New User</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    
                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Username Field -->
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" placeholder="Enter username (3-50 characters)" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                        <small class="text-muted">
                            Username can only contain letters, numbers, and underscores
                        </small>
                    </div>

                    <!-- Password Field -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Enter password (minimum 6 characters)" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password Field -->
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Role Selection -->
                    <div class="mb-3">
                        <label asp-for="Role" class="form-label"></label>
                        <select asp-for="Role" class="form-select">
                            <option value="Staff">Staff - Can view and manage visitors</option>
                            <option value="Admin">Admin - Full system access</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <!-- Role Information -->
                    <div class="alert alert-info">
                        <strong>ℹ️ Role Permissions:</strong>
                        <ul class="mb-0">
                            <li><strong>Staff:</strong> Can view dashboard, add/edit visitors, check-out visitors</li>
                            <li><strong>Admin:</strong> All Staff permissions + Manage users, Delete visitors</li>
                        </ul>
                    </div>

                    <!-- Buttons -->
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">
                            💾 Create User
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}