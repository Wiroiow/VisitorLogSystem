@model VisitorLogSystem.ViewModels.Admin.UserViewModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">🗑️ Delete User</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <strong>⚠️ Warning!</strong> Are you sure you want to delete this user?
                    <br />This action cannot be undone!
                </div>

                <h5>User Details:</h5>
                <dl class="row">
                    <dt class="col-sm-4">User ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Username:</dt>
                    <dd class="col-sm-8"><strong>@Model.Username</strong></dd>

                    <dt class="col-sm-4">Role:</dt>
                    <dd class="col-sm-8">
                        <span class="badge @Model.RoleBadgeClass">@Model.Role</span>
                    </dd>

                    <dt class="col-sm-4">Created:</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")</dd>
                </dl>

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-danger">
                        ✔️ Yes, Delete User
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        ✖️ No, Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>