@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h3>🚫 Access Denied</h3>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="bi bi-shield-exclamation" style="font-size: 80px; color: #dc3545;"></i>
                </div>
                <h4 class="text-danger">You don't have permission to access this page</h4>
                <p class="text-muted">
                    This page requires specific permissions that your account doesn't have.
                </p>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">
                        🏠 Go to Dashboard
                    </a>
                    <a href="@Url.Action("Logout", "Auth")" class="btn btn-secondary">
                        🚪 Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>