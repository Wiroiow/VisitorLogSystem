@model VisitorLogSystem.ViewModels.PreRegistrationListViewModel

@{
    ViewData["Title"] = "Pre-Registered Visitors";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-12">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Pre-Register Visitor
            </a>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by name or purpose" />
                </div>
                <div class="col-md-3">
                    <input type="date" name="filterDate" value="@Model.FilterDate?.ToString("yyyy-MM-dd")" class="form-control" />
                </div>
                <div class="col-md-2">
                    <div class="form-check mt-2">
                        <input type="checkbox" name="showOnlyPending" value="true" checked="@Model.ShowOnlyPending" class="form-check-input" id="showOnlyPending" />
                        <label class="form-check-label" for="showOnlyPending">Show Only Pending</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-secondary">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.PreRegistrations.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Purpose</th>
                                <th>Expected Date</th>
                                <th>Host</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PreRegistrations)
                            {
                                <tr>
                                    <td>@item.FullName</td>
                                    <td>@item.Purpose</td>
                                    <td>@item.ExpectedVisitDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>@item.HostUserName</td>
                                    <td>
                                        @if (item.IsCheckedIn)
                                        {
                                            <span class="badge bg-success">Checked In</span>
                                        }
                                        else if (item.ExpectedVisitDate < DateTime.Now)
                                        {
                                            <span class="badge bg-warning">Overdue</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">Pending</span>
                                        }
                                    </td>
                                    <td>@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (!item.IsCheckedIn)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="CheckIn" asp-route-id="@item.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success" title="Check In" onclick="return confirm('Check in this visitor?');">
                                                    <i class="fas fa-sign-in-alt"></i> Check In
                                                </button>
                                            </form>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this pre-registration?');">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No pre-registered visitors found.
                </div>
            }
        </div>
    </div>
</div>