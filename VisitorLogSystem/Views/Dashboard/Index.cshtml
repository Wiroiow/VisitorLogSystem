@model VisitorLogSystem.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Dashboard Header -->
<div class="row mb-4">
    <div class="col">
        <h2>📊 Visitor Dashboard</h2>
        <p class="text-muted">Overview of visitor activity</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <!-- Today's Visitors Card -->
    <div class="col-md-3 col-lg-2 mb-3">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <h5 class="card-title">Today's Visitors</h5>
                <h2 class="display-4">@Model.TotalVisitorsToday</h2>
                <p class="card-text">Total entries today</p>
            </div>
        </div>
    </div>

    <!-- Currently Inside Card -->
    <div class="col-md-3 col-lg-2 mb-3">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <h5 class="card-title">Currently Inside</h5>
                <h2 class="display-4">@Model.CurrentlyInside</h2>
                <p class="card-text">Active visitors</p>
            </div>
        </div>
    </div>

    <!-- Monthly Visitors Card -->
    <div class="col-md-3 col-lg-2 mb-3">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <h5 class="card-title">This Month</h5>
                <h2 class="display-4">@Model.MonthlyVisitors</h2>
                <p class="card-text">Total this month</p>
            </div>
        </div>
    </div>

    <!-- Quick Action Card -->
    <div class="col-md-3 col-lg-2 mb-3">
        <div class="card bg-light h-100">
            <div class="card-body text-center d-flex flex-column justify-content-center">
                <h5 class="card-title">Quick Actions</h5>
                <a href="@Url.Action("Create", "Visitor")" class="btn btn-primary btn-lg">
                    ➕ New Visitor
                </a>
            </div>
        </div>
    </div>

    <!-- Room Visits Card -->
    <div class="col-md-3 col-lg-2 mb-3">
        <div class="card text-white bg-warning h-100">
            <div class="card-body text-center d-flex flex-column justify-content-center">
                <h5 class="card-title">Room Access</h5>
                <a href="@Url.Action("Index", "RoomVisits")" class="btn btn-light btn-lg">
                    🚪 Room Visits
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Visitors Table -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>🕐 Recent Visitors</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentVisitors.Any())
                {
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Purpose</th>
                                <th>Time In</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var visitor in Model.RecentVisitors)
                            {
                                <tr>
                                    <td>@visitor.FullName</td>
                                    <td>@visitor.Purpose</td>
                                    <td>@visitor.TimeIn.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>
                                        @if (visitor.TimeOut.HasValue)
                                        {
                                            <span class="badge bg-secondary">Left</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Inside</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Visitor", new { id = visitor.Id })"
                                           class="btn btn-sm btn-warning">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No recent visitors found.</p>
                }

                <div class="mt-3">
                    <a href="@Url.Action("Index", "Visitor")" class="btn btn-outline-primary">
                        View All Visitors →
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ========================================== -->
<!-- NEW SECTION: Analytics & Charts -->
<!-- ========================================== -->
<div class="row mb-3">
    <div class="col">
        <h4>📈 Analytics & Charts</h4>
        <p class="text-muted">Visual insights and trends</p>
    </div>
</div>

<!-- Charts Row 1: Line Chart and Doughnut Chart -->
<div class="row mb-4">
    <!-- Visitors Per Day Chart -->
    <div class="col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">📅 Visitors Per Day (Last 7 Days)</h5>
            </div>
            <div class="card-body">
                <canvas id="visitorsPerDayChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Visitor Status Chart -->
    <div class="col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">👥 Visitor Status</h5>
            </div>
            <div class="card-body">
                <canvas id="visitorStatusChart"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row 2: Top Rooms Bar Chart -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">🏆 Top 5 Rooms Visited (Last 30 Days)</h5>
            </div>
            <div class="card-body">
                <canvas id="topRoomsChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js Library from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // ============================================
        // Chart 1: Visitors Per Day (Line Chart)
        // ============================================
        fetch('/Dashboard/GetVisitorsPerDay')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('visitorsPerDayChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: data.labels,
                        datasets: [{
                            label: 'Number of Visitors',
                            data: data.data,
                            borderColor: 'rgb(75, 192, 192)',
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            tension: 0.3,
                            fill: true,
                            borderWidth: 2,
                            pointRadius: 4,
                            pointHoverRadius: 6
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1,
                                    precision: 0
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: true,
                                position: 'top'
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return 'Visitors: ' + context.parsed.y;
                                    }
                                }
                            }
                        }
                    }
                });
            })
            .catch(error => {
                console.error('Error loading visitors per day chart:', error);
                document.getElementById('visitorsPerDayChart').parentElement.innerHTML =
                    '<p class="text-danger">Failed to load chart data.</p>';
            });

        // ============================================
        // Chart 2: Visitor Status (Doughnut Chart)
        // ============================================
        fetch('/Dashboard/GetVisitorStatus')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('visitorStatusChart').getContext('2d');
                new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: data.labels,
                        datasets: [{
                            data: data.data,
                            backgroundColor: [
                                'rgba(40, 167, 69, 0.8)',   // Green for Inside
                                'rgba(220, 53, 69, 0.8)'    // Red for Checked Out
                            ],
                            borderColor: [
                                'rgba(40, 167, 69, 1)',
                                'rgba(220, 53, 69, 1)'
                            ],
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    padding: 15,
                                    font: {
                                        size: 13
                                    }
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        const label = context.label || '';
                                        const value = context.parsed || 0;
                                        const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                        const percentage = total > 0 ? ((value / total) * 100).toFixed(1) : 0;
                                        return label + ': ' + value + ' (' + percentage + '%)';
                                    }
                                }
                            }
                        }
                    }
                });
            })
            .catch(error => {
                console.error('Error loading visitor status chart:', error);
                document.getElementById('visitorStatusChart').parentElement.innerHTML =
                    '<p class="text-danger">Failed to load chart data.</p>';
            });

        // ============================================
        // Chart 3: Top Rooms Visited (Bar Chart)
        // ============================================
        fetch('/Dashboard/GetTopRooms')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('topRoomsChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: data.labels,
                        datasets: [{
                            label: 'Number of Visits',
                            data: data.data,
                            backgroundColor: 'rgba(54, 162, 235, 0.7)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 2
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1,
                                    precision: 0
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return 'Visits: ' + context.parsed.y;
                                    }
                                }
                            }
                        }
                    }
                });
            })
            .catch(error => {
                console.error('Error loading top rooms chart:', error);
                document.getElementById('topRoomsChart').parentElement.innerHTML =
                    '<p class="text-danger">Failed to load chart data.</p>';
            });
    </script>
}