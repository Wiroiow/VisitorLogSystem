@model VisitorLogSystem.Models.Visitor

@{
    ViewData["Title"] = "Visitor Details";
}

<h2>Visitor Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Purpose</dt>
            <dd class="col-sm-9">@Model.Purpose</dd>

            <dt class="col-sm-3">Contact Number</dt>
            <dd class="col-sm-9">
                @* ✅ FIX Line 21 - Use inline logic instead of method *@
                @(string.IsNullOrWhiteSpace(Model.ContactNumber) ? "Not provided" : Model.ContactNumber)
            </dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">
                @(string.IsNullOrWhiteSpace(Model.Email) ? "Not provided" : Model.Email)
            </dd>

            <dt class="col-sm-3">Time In</dt>
            <dd class="col-sm-9">@Model.TimeIn.ToString("MMM dd, yyyy hh:mm tt")</dd>

            <dt class="col-sm-3">Time Out</dt>
            <dd class="col-sm-9">
                @if (Model.TimeOut.HasValue)
                {
                    @Model.TimeOut.Value.ToString("MMM dd, yyyy hh:mm tt")
                }
                else
                {
                    <span class="badge bg-success">Still Inside</span>
                }
            </dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @* ✅ FIX Line 66 - Use inline logic *@
                @if (!Model.TimeOut.HasValue)
                {
                    <span class="badge bg-success">Currently Inside</span>
                }
                else
                {
                    <span class="badge bg-secondary">Checked Out</span>
                }
            </dd>

            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">
                @* ✅ FIX Line 78 *@
                @if (!Model.TimeOut.HasValue)
                {
                    <text>Still inside</text>
                }
                else
                {
                    var duration = Model.TimeOut.Value - Model.TimeIn;
                    <text>@duration.Hours h @duration.Minutes m</text>
                }
            </dd>
        </dl>

        <h4 class="mt-4">Room Visits</h4>
        @if (Model.RoomVisits != null && Model.RoomVisits.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Room</th>
                        <th>Purpose</th>
                        <th>Entered At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var visit in Model.RoomVisits)
                    {
                        <tr>
                            <td>@visit.RoomName</td>
                            <td>@visit.Purpose</td>
                            <td>@visit.EnteredAt.ToString("MMM dd, yyyy hh:mm tt")</td>
                        </tr>
                    }
                </tbody>
            </table>

            <p class="text-muted">
                @* ✅ FIX Line 117 - Use inline count *@
                Total Room Visits: <strong>@Model.RoomVisits.Count</strong>
            </p>
        }
        else
        {
            <p class="text-muted">No room visits recorded.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>