@model IEnumerable<VisitorLogSystem.Models.Visitor>

@{
    ViewData["Title"] = "Visitors";
}

<h1>Visitor Log</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Register New Visitor</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row mb-3">
    <div class="col-md-12">
        <ul class="nav nav-tabs" id="visitorTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button">
                    Currently In Building
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button">
                    All Visitors
                </button>
            </li>
        </ul>
    </div>
</div>

<div class="tab-content" id="visitorTabContent">
    <!-- ACTIVE VISITORS TAB -->
    <div class="tab-pane fade show active" id="active" role="tabpanel">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Purpose</th>
                    <th>Contact</th>
                    <th>Time In</th>
                    <th>Duration</th>
                    <th>Room Visits</th>
                    <th>Actions</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any(v => v != null && v.TimeOut == null))
                {
                    @foreach (var visitor in Model.Where(v => v != null && v.TimeOut == null))
                    {
                        <tr>
                            <td>@(visitor.FullName ?? "Unknown")</td>
                            <td>@(visitor.Purpose ?? "-")</td>
                            <td>@(visitor.ContactNumber ?? "N/A")</td>
                            <td>@visitor.TimeIn.ToString("MMM dd, hh:mm tt")</td>
                            <td>@(visitor.Email ?? "N/A")</td>
                            <td>
                                @{
                                    var duration = DateTime.Now - visitor.TimeIn;
                                    @($"{duration.Hours}h {duration.Minutes}m")
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">
                                    @(visitor.RoomVisits?.Count ?? 0) rooms
                                </span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@visitor.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@visitor.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="SignOut" asp-route-id="@visitor.Id" class="btn btn-sm btn-success">Sign Out</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            <em>No visitors currently in the building.</em>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- ALL VISITORS TAB -->
    <div class="tab-pane fade" id="all" role="tabpanel">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Purpose</th>
                    <th>Contact</th>
                    <th>Time In</th>
                    <th>Time Out</th>
                    <th>Status</th>
                    <th>Actions</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var visitor in Model.Where(v => v != null))
                    {
                        <tr>
                            <td>@(visitor.FullName ?? "Unknown")</td>
                            <td>@(visitor.Purpose ?? "-")</td>
                            <td>@(visitor.ContactNumber ?? "N/A")</td>
                            <td>@visitor.TimeIn.ToString("MMM dd, hh:mm tt")</td>
                            <td>@(visitor.Email ?? "N/A")</td>
                            <td>
                                @if (visitor.TimeOut.HasValue)
                                {
                                    @visitor.TimeOut.Value.ToString("MMM dd, hh:mm tt")
                                }
                                else
                                {
                                    <span class="text-muted">Still in building</span>
                                }
                            </td>
                            <td>
                                @if (visitor.TimeOut.HasValue)
                                {
                                    <span class="badge bg-secondary">Signed Out</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@visitor.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@visitor.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@visitor.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            <em>No visitors recorded yet.</em>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>