<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Visitor Kiosk</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Kiosk-specific CSS -->
    <link rel="stylesheet" href="~/css/kiosk.css" asp-append-version="true" />
</head>
<body class="kiosk-body">
    <!-- Kiosk Header (minimal) -->
    <header class="kiosk-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col">
                    <h4 class="mb-0">
                        <i class="bi bi-building me-2"></i>
                        Visitor Check-In Kiosk
                    </h4>
                </div>
                <div class="col-auto">
                    <span class="badge bg-primary fs-6">
                        <i class="bi bi-clock-fill me-2"></i>
                        @DateTime.Now.ToString("hh:mm tt")
                    </span>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content Area -->
    <main class="kiosk-main">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Kiosk Footer (minimal) -->
    <footer class="kiosk-footer">
        <div class="container-fluid">
            <div class="text-center text-muted">
                <small>
                    <i class="bi bi-shield-check me-1"></i>
                    Visitor Log System © @DateTime.Now.Year
                </small>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>