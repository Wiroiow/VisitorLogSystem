@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Visitor Log System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Custom CSS (if you have one) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Dashboard")">
                    🏢 Visitor Log System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* Only show menu if user is authenticated *@
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                    📊 Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Visitor" asp-action="Index">
                                    👥 Visitors
                                </a>
                            </li>
                            <!-- ✅ NEW: Room Visits Menu Item -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="RoomVisits" asp-action="Index">
                                    🚪 Room Visits
                                </a>
                            </li>

                            @* Admin menu (only visible to admins) *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-warning" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        ⚙️ Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Index", "AdminDashboard")">
                                                📊 Admin Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Index", "UserManagement")">
                                                👥 User Management
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Create", "UserManagement")">
                                                ➕ Create New User
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    @* User info and logout *@
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    👤 @User.Identity.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <span class="badge bg-warning text-dark">Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Staff</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item disabled" href="#">
                                            <strong>User ID:</strong> @User.FindFirstValue(ClaimTypes.NameIdentifier)
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item disabled" href="#">
                                            <strong>Role:</strong> @User.FindFirstValue(ClaimTypes.Role)
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                🚪 Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                    🔐 Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2026 - Visitor Log System
                </div>
                <div class="col-md-6 text-end">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <text>Logged in as: <strong>@User.Identity.Name</strong></text>
                    }
                    else
                    {
                        <text>Not logged in</text>
                    }
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery (required for validation) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JavaScript (if you have one) -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Render Scripts section if it exists -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>