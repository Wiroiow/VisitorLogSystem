@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Views/Shared/_KioskLayout.cshtml";
}

<div class="kiosk-welcome-container">
    <div class="text-center">
        <div class="welcome-icon">
            <i class="bi bi-door-open-fill"></i>
        </div>

        <h1 class="display-3 fw-bold mb-4">Welcome!</h1>

        <p class="lead fs-3 mb-5">
            Please tap the button below to begin your check-in
        </p>

        <div class="d-grid gap-4">
            <a asp-action="PreRegLookup" class="btn btn-primary btn-kiosk">
                <i class="bi bi-person-check-fill me-3"></i>
                Start Check-In
            </a>
        </div>

        <div class="mt-5 pt-5">
            <p class="text-muted fs-5">
                <i class="bi bi-clock-fill me-2"></i>
                @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
                <br>
                @DateTime.Now.ToString("hh:mm tt")
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh time every minute
        setInterval(function() {
            location.reload();
        }, 60000);
    </script>
}