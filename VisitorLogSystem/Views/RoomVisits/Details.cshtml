@model VisitorLogSystem.Models.RoomVisit

@{
    ViewData["Title"] = "Room Visit Details";
}

<h1>Room Visit Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Visitor Name</dt>
            <dd class="col-sm-9">
                @if (Model.Visitor != null)
                {
                    <a asp-controller="Visitors" asp-action="Details" asp-route-id="@Model.VisitorId">
                        @Model.Visitor.FullName
                    </a>
                }
                else
                {
                    <span class="text-muted">Unknown Visitor</span>
                }
            </dd>

            <dt class="col-sm-3">Contact Number</dt>
            <dd class="col-sm-9">@(Model.Visitor?.ContactNumber ?? "Not provided")</dd>

            <dt class="col-sm-3">Room Name/Number</dt>
            <dd class="col-sm-9">@Model.RoomName</dd>

            <dt class="col-sm-3">Entered At</dt>
            <dd class="col-sm-9">@Model.EnteredAt.ToString("MMMM dd, yyyy hh:mm tt")</dd>

            <dt class="col-sm-3">Purpose</dt>
            <dd class="col-sm-9">@(Model.Purpose ?? "Not specified")</dd>

            <dt class="col-sm-3">Building Entry Time</dt>
            <dd class="col-sm-9">
                @if (Model.Visitor != null)
                {
                    @Model.Visitor.TimeIn.ToString("MMMM dd, yyyy hh:mm tt")
                }
                else
                {
                    <span class="text-muted">Unknown</span>
                }
            </dd>

            <dt class="col-sm-3">Record Created</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>