@model IEnumerable<VisitorLogSystem.Models.RoomVisit>
@{
    ViewData["Title"] = "Room Visits";
}

<h1>🚪 Room Visits</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Record New Room Visit
    </a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Visitor Name</th>
                <th>Room</th>
                <th>Entered At</th>
                <th>Purpose</th>
                <th>Contact</th>
                <th>Visitor Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    var visitorSignedOut = item.Visitor?.TimeOut.HasValue ?? false;

                    <tr class="@(visitorSignedOut ? "table-secondary" : "")">
                        <td>
                            @if (item.Visitor != null)
                            {
                                <a asp-controller="Visitor" asp-action="Details" asp-route-id="@item.VisitorId">
                                    @item.Visitor.FullName
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Unknown Visitor</span>
                            }
                        </td>
                        <td><strong>@item.RoomName</strong></td>
                        <td>
                            <small>@item.EnteredAt.ToString("MMM dd, yyyy hh:mm tt")</small>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Purpose))
                            {
                                @item.Purpose
                            }
                            else
                            {
                                <em class="text-muted">Not specified</em>
                            }
                        </td>
                        <td>@(item.Visitor?.ContactNumber ?? "N/A")</td>
                        <td>
                            @if (visitorSignedOut)
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-box-arrow-right"></i> Signed Out
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-person-check"></i> Active
                                </span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                    <i class="bi bi-eye"></i> Details
                                </a>

                                @if (!visitorSignedOut)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-secondary" disabled title="Cannot edit - visitor has signed out">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                }

                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">
                        <em>No room visits recorded yet.</em>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>