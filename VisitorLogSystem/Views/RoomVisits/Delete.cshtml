@model VisitorLogSystem.Models.RoomVisit

@{
    ViewData["Title"] = "Delete Room Visit";
}

<h1>Delete Room Visit</h1>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this room visit record?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Visitor</dt>
            <dd class="col-sm-9">@(Model.Visitor?.FullName ?? "Unknown Visitor")</dd>

            <dt class="col-sm-3">Room</dt>
            <dd class="col-sm-9">@Model.RoomName</dd>

            <dt class="col-sm-3">Entered At</dt>
            <dd class="col-sm-9">@Model.EnteredAt.ToString("MMMM dd, yyyy hh:mm tt")</dd>

            <dt class="col-sm-3">Purpose</dt>
            <dd class="col-sm-9">@(Model.Purpose ?? "Not specified")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>