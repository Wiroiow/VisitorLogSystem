@model VisitorLogSystem.Models.RoomVisit

@{
    ViewData["Title"] = "Record Room Visit";
}

<h1>Record New Room Visit</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="VisitorId" class="control-label">Select Visitor (Currently in Building)</label>
                <select asp-for="VisitorId" class="form-control" asp-items="ViewBag.VisitorId">
                    <option value="">-- Select a Visitor --</option>
                </select>
                <span asp-validation-for="VisitorId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="RoomName" class="control-label">Room Name/Number</label>
                <input asp-for="RoomName" class="form-control" placeholder="e.g., Room 101, Conference Room A" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="EnteredAt" class="control-label">Entry Time</label>
                <input asp-for="EnteredAt" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="EnteredAt" class="text-danger"></span>
                <small class="form-text text-muted">Leave as current time or adjust if needed</small>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Purpose" class="control-label">Purpose (Optional)</label>
                <textarea asp-for="Purpose" class="form-control" rows="3" placeholder="e.g., Meeting, Delivery, Maintenance"></textarea>
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Record Visit</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}